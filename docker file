# Dockerfile
FROM python:3.11-slim          # 1️⃣  Usa un’immagine base di Python
RUN pip install fastapi uvicorn  # 2️⃣  Installa FastAPI (il web‑server)

# 3️⃣  Il nostro “server” che risponde alle richieste
COPY server.py /app/server.py
COPY index.html /app/index.html
WORKDIR /app

CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8000"]
